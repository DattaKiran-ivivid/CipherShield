{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ciphershield",
  "version": "0.1.0",
  "identifier": "com.ivivid.ciphershield",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ciphershield",
        "width": 1500,
        "height": 1000
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'",
      "capabilities": ["default"]  
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../cipherengine/**/*"
    ],
    "externalBin": [
      "binaries/cipher-server"
    ]
  },
  "plugins": {
    "shell": {}  
  }
}